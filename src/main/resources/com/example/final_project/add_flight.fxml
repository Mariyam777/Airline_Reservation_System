<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.final_project.AddFlightController"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #f0f0f0;">

    <Label text="Add New Flight" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Flight Number:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="flightNumberField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Origin:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="originField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Destination:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="destinationField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Departure Date (YYYY-MM-DD):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="departureDateField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Price:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Total Seats:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="totalSeatsField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Save Flight" onAction="#handleSave"
            style="-fx-background-color: #4caf50; -fx-text-fill: white;"/>
</VBox>
