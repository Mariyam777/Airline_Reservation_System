<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.final_project.BookingController" spacing="20"
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">

    <Label text="Booking Form" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Passport Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="passportField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Phone Number:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Button text="Confirm Booking" onAction="#confirmBooking" GridPane.rowIndex="4" GridPane.columnIndex="1"
                style="-fx-base: #4caf50; -fx-min-width: 100;"/>
    </GridPane>
</VBox>
