<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.final_project.RegisterController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Register New Account" style="-fx-font-size: 18px;"/>

    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <ChoiceBox fx:id="roleChoiceBox"/>

    <Button text="Register" onAction="#handleRegister"/>
    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
</VBox>
